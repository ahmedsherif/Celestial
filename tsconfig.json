{
	"compilerOptions": {
		"incremental": true,
		"target": "es5",
		"module": "commonjs",
		"outDir": "./",
		"rootDir": "./src",
		"tsBuildInfoFile": "./.tsbuildinfo",
		"strict": true,
		"noImplicitAny": false,
		"baseUrl": "src",
		"paths": {
			"middleware/*": ["middleware/*"],
			"config/*": ["config/*"],
			"lib/*": ["lib/*"],
			"routes/*": ["routes/*"],
			"enumerator/*": ["enumerator/*"],
			"interface/*": ["interface/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["./node_modules"]
}
