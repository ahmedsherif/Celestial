{% layout 'default' %}

<form
    class="form form--publishing publishing-form publishing-form--repost-of"
    action="/publish/create/"
    enctype="{{ user.preferences.formEncoding }}"
    method="post"
>
    {% include 'form/date-time' %}

    <fieldset class="publishing-form__content">
        <legend>Content&nbsp;</legend>

        <div class="field-group">
            <label for="field-group__slug">Slug:</label>
            <p
                class="field-group__description"
                id="field-group__description--slug"
            >Write a slug if your Micropub server supports it. In case of a collision, the server may choose to modify the slug. If you leave this empty, it may choose to generate a random string. If your server does not support this, you can safely ignore it.</p>
            <input
                type="text"
                id="field-group__slug"
                name="mp-slug"
                aria-describedby="field-group__description--slug"
            />

        </div>

        <div class="field-group field-group--repost-of">
             <label for="field-group__repost-of">URL of the page you like:</label>
             <p
                class="field-group__description"
                id="field-group__description--repost-of"
            >The permalink of the post/page you want to repost.</p>
            <input
                type="url"
                class="field-group__url"
                id="field-group__repost-of"
                name="u-repost-of"
                aria-describedby="field-group__description--repost-of"
            />
        </div>

    </fieldset>

    {% include 'form/syndicate-to' %}

    <input type="hidden" name="h" value="entry">

    <button
        type="submit"
        class="publishing-form__button publishing-form__button--submit"
    >Repost
    </button>

</form>

