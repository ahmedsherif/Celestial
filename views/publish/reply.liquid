{% layout 'default' %}

<form
    class="form form--publishing publishing-form publishing-form--in-reply-to"
    action="/publish/create/"
    enctype="{{ user.preferences.formEncoding }}"
    method="post"
>
    {% include 'form/date-time' %}

    <fieldset class="publishing-form__content">
        <legend>Content&nbsp;</legend>

        {% include 'form/mp-slug' %}

        <div class="field-group field-group--in-reply-to">
             <label for="field-group__in-reply-to">URL of the page you are replying to:</label>
             <p
                class="field-group__description"
                id="field-group__description--in-reply-to"
            >The permalink of the post/page you want to reply to.</p>
            <input
                type="url"
                class="field-group__url"
                id="field-group__in-reply-to"
                name="u-in-reply-to"
                aria-describedby="field-group__description--in-reply-to"
            />
        </div>

        {% include 'form/content' %}
    </fieldset>

    {% include 'form/syndicate-to' %}

    <input type="hidden" name="h" value="entry">

    <button
        type="submit"
        class="publishing-form__button publishing-form__button--submit"
    >Reply
    </button>

</form>

